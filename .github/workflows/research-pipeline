name: Masters Research CI/CD Pipeline

on:
  push:
    branches: [ main, research, develop ]
  pull_request:
    branches: [ main, research ]

jobs:
  research-testing:
    name: Research Test Suite
    runs-on: ubuntu-latest
    
    strategy:
      matrix:
        python-version: ['3.9', '3.10', '3.11']
    
    steps:
    - name: Checkout Code
      uses: actions/checkout@v4
      
    - name: Setup Python ${{ matrix.python-version }}
      uses: actions/setup-python@v4
      with:
        python-version: ${{ matrix.python-version }}
        
    - name: Install Research Dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -e .
        pip install pytest pytest-cov pytest-html pytest-benchmark
        pip install hypothesis numpy scipy statsmodels
        pip install coverage codecov
        
    - name: Execute Research Tests
      run: |
        pytest tests/ -v --cov=./ --cov-report=xml --cov-report=html --junitxml=test-results.xml
        
    - name: Run Advanced Research Analysis
      run: |
        python -m tests.research.test_advanced_methodologies || echo "Research tests completed"
        
    - name: Upload Coverage to Codecov
      uses: codecov/codecov-action@v3
      with:
        file: ./coverage.xml
        flags: unittests
        name: codecov-umbrella
        
    - name: Upload Test Results
      uses: actions/upload-artifact@v3
      with:
        name: test-results-${{ matrix.python-version }}
        path: |
          test-results.xml
          htmlcov/
        retention-days: 7

  research-performance:
    name: Performance Benchmarks
    runs-on: ubuntu-latest
    needs: research-testing
    
    steps:
    - name: Checkout Code
      uses: actions/checkout@v4
      
    - name: Setup Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: Install Performance Dependencies
      run: |
        pip install pytest-benchmark memory_profiler psutil
        
    - name: Run Performance Tests
      run: |
        pytest tests/performance/ -v --benchmark-only
