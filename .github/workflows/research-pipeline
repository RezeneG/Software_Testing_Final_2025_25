name: Research CI/CD Pipeline

on:
  push:
    branches: [ main, master, research ]
  pull_request:
    branches: [ main, master ]
  schedule:
    - cron: '0 2 * * 1'  # Weekly performance benchmarking (Monday 2 AM)

jobs:
  research-analysis:
    name: Research-Grade Quality Analysis
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ['3.9', '3.10', '3.11']
    
    steps:
    - name: Checkout Research Codebase
      uses: actions/checkout@v4
      with:
        fetch-depth: 0  # Full history for research analysis

    - name: Set up Python ${{ matrix.python-version }}
      uses: actions/setup-python@v4
      with:
        python-version: ${{ matrix.python-version }}

    - name: Install Research Dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements-research.txt

    - name: Code Quality Analysis
      run: |
        echo "=== RESEARCH: CODE QUALITY ANALYSIS ==="
        flake8 app_optimized.py --max-line-length=120 --count --statistics

    - name: Security Research Scan
      run: |
        echo "=== RESEARCH: SECURITY ANALYSIS ==="
        safety check

    - name: Execute Research Test Suite
      run: |
        echo "=== RESEARCH: TEST EXECUTION ==="
        pytest --ignore=tests/unit/test_research_models.py -v --tb=short

    - name: Research Coverage Analysis
      run: |
        echo "=== RESEARCH: COVERAGE ANALYSIS ==="
        pytest --cov=app_optimized --cov-report=term-missing --cov-report=xml --ignore=tests/unit/test_research_models.py

    - name: Mutation Testing Research
      run: |
        echo "=== RESEARCH: MUTATION ANALYSIS ==="
        mutmut run --paths-to-mutate app_optimized.py || true
        mutmut results

    - name: Performance Benchmark Research
      run: |
        echo "=== RESEARCH: PERFORMANCE ANALYSIS ==="
        pytest tests/research/test_advanced_methodologies.py::TestAdvancedResearchMethods::test_statistical_performance_validation -v -s

  research-metrics:
    name: Research Metrics Collection
    runs-on: ubuntu-latest
    needs: research-analysis
    if: always()

    steps:
    - name: Checkout Code
      uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: Install Dependencies
      run: |
        pip install -r requirements-research.txt

    - name: Generate Research Report
      run: |
        echo "=== RESEARCH METRICS SUMMARY ==="
        echo "Test Results:"
        pytest --ignore=tests/unit/test_research_models.py -q
        echo ""
        echo "Coverage Analysis:"
        pytest --cov=app_optimized --cov-report=term-missing --ignore=tests/unit/test_research_models.py -q
        echo ""
        echo "Mutation Testing:"
        mutmut results --show-covered
        echo ""
        echo "Code Complexity:"
        radon cc app_optimized.py -s

    - name: Upload Research Artifacts
      uses: actions/upload-artifact@v3
      with:
        name: research-results
        path: |
          .pytest_cache/
          .mutmut-cache/
          htmlcov/
        retention-days: 30
